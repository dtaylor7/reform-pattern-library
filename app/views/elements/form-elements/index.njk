{% set title = pageTitle %}
{% extends "layout.njk" %}
{% from "macros/button.njk" import button %}
{% from "macros/fields.njk" import textbox %}
{% from "macros/fields.njk" import moneybox %}

{% block page_title %}{{pageTitle}} - GOV.UK{% endblock %}

{% block content %}
<main class="pattern-library" id="content" role="main">

  {% include "partials/phase_banner.njk" ignore missing %}

  {% include "partials/breadcrumb.njk" ignore missing %}

  <div class="grid-row">

    <div class="column-two-thirds">

      <h1 class="heading-xlarge"><span class="heading-secondary">{{service_title}}</span> {{pageTitle}}</h1>

      <p class="lede">A collection of form patterns.</p>

    </div>

  </div>


  <h2 class="heading-medium">Field widths</h2>

  <p class="lead-in">You can use the following control widths:</p>
  <ul class="list list-bullet">
    <li>1-8 (12.5%)</li>
    <li>1-4 (25%)</li>
    <li>1-3 (30%)</li>
    <li>1-2 (50%)</li>
    <li>2-3 (60%)</li>
    <li>3-4 (75%)</li>
  </ul>

  <div class="example" data-title="Examples">

    <div class="form-group">
      {% set field = { id: "form-control-width-1-8", name: "form-control-width-1-8" } %}
      {{ textbox(field, "Input with class form-control-1-8 (12.5% width)", controlwidth="1-8") }}
    </div>

    <div class="form-group">
      {% set field = { id: "form-control-width-1-4", name: "form-control-width-1-4" } %}
      {{ textbox(field, "Input with class form-control-1-4 (25% width)", controlwidth="1-4") }}
    </div>

    <div class="form-group">
      {% set field = { id: "form-control-width-1-3", name: "form-control-width-1-3" } %}
      {{ textbox(field, "Input with class form-control-1-3 (33% width)", controlwidth="1-3") }}
    </div>

    <div class="form-group">
      {% set field = { id: "form-control-width-1-2", name: "form-control-width-1-2" } %}
      {{ textbox(field, "Input with class form-control-1-2 (50% width)", controlwidth="1-2") }}
    </div>

    <div class="form-group">
      {% set field = { id: "form-control-width-2-3", name: "form-control-width-2-3" } %}
      {{ textbox(field, "Input with class form-control-2-3 (66% width)", controlwidth="2-3") }}
    </div>

    {% set field = { id: "form-control-width-3-4", name: "form-control-width-3-4" } %}
    {{ textbox(field, "Input with class form-control-3-4 (75% width)", controlwidth="3-4") }}

  </div>


<!-- code snippet -->
<pre><code class="prettyprint">
{%- raw %}
  {% set field = { id: "ID", name: "Name" } %}
  {{ textbox(field, "Label", controlwidth="1-2") }}
{% endraw %}
</code></pre>


  <h2 class="heading-medium">Money fields</h2>

  <p class="lead-in">You can use the following currency:</p>
  <ul class="list list-bullet">
    <li>pounds</li>
    <li>euros</li>
    <li>dollars</li>
  </ul>

  <div class="example" data-title="Examples">

    <div class="form-group">
      {% set field = { id: "net-income-pounds", name: "net-income-pounds" } %}
      {{ moneybox(field, "Total monthly income", currency="pounds") }}
    </div>

    <div class="form-group">
      {% set field = { id: "net-income-euros", name: "net-income-euros" } %}
      {{ moneybox(field, "Total monthly income", currency="euros") }}
    </div>

    {% set field = { id: "net-income-dollars", name: "net-income-dollars" } %}
    {{ moneybox(field, "Total monthly income", currency="dollars") }}

  </div>


<!-- code snippet -->
<pre><code class="prettyprint">
{%- raw %}
  {% set field = { id: "ID", name: "NAME" } %}
  {{moneybox(field, "LABEL", currency="pounds") }}
{% endraw %}
</code></pre>

</main>
{% endblock %}
