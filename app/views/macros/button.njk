{#
  button
    label -
    style -
  Renders a button
#}

{% macro button(label, style="primary", type="button") %}
  <button class="button{% if (style == 'secondary') %} button-secondary{% endif %}{% if (style == 'tertiary') %} button-tertiary{% endif %}" type="{{type}}">{{ label }}</button>
{% endmacro %}
